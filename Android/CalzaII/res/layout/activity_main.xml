<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calzaII.calzaII.calzaII.MainActivity" 
    android:orientation="vertical" >
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="CalzaII"
        android:textColor="#3CC2A3"
        android:textSize="30dp"
        android:textStyle="bold" />
    
    <Button 
        android:id="@+id/btnNi単o"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ni単o"
        android:layout_marginTop="10dp"/>
    
    <Button 
        android:id="@+id/btnNi単a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ni単a"/>
    
    <Button 
        android:id="@+id/btnHombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hombre"/>
    
    <Button 
        android:id="@+id/btnMujer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mujer"/>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btnOfertas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Ofertas"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>
